<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:background="@drawable/rounded_modify_button">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text=""
        android:textSize="30sp"/>


    <ImageView
        android:layout_width="95dp"
        android:layout_height="89dp"
        android:layout_below="@id/name"
        android:id="@+id/image"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:text=""
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textSize="15sp"
       android:layout_toRightOf="@+id/image"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:text=""
        android:textSize="15sp"
        android:gravity="right"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <TextView
        android:id="@+id/largeTrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Traditional"
        android:textSize="10sp"
        android:layout_below="@+id/image"
        android:layout_alignBottom="@id/image"
       />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_alignRight="@id/largeTrad"
        android:background="@mipmap/modifypizza" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/addcart"
        android:layout_alignBottom="@+id/image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/imageButton2" />

</RelativeLayout>
