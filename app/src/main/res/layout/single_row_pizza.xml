<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:background="@drawable/rounded_products_list">

    <TextView
        android:id="@+id/name_pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/image_pizza"
        android:layout_width="98dp"
        android:layout_height="82dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/cart_pizza_bnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/addcart"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignTop="@+id/largeTrad"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/descr_pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingRight="15dp"
        android:textSize="15sp"
        android:layout_below="@+id/name_pizza"
        android:layout_toRightOf="@+id/largeTrad"
        android:layout_toEndOf="@+id/largeTrad"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/price_pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_alignBottom="@id/cart_pizza_bnt"
        android:layout_toLeftOf="@id/cart_pizza_bnt"
        android:layout_toStartOf="@id/cart_pizza_bnt"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <TextView
        android:id="@+id/largeTrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Traditional"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@id/image_pizza"
        android:background="@drawable/rounded_modify_button" />

    <ImageButton
        android:id="@+id/modify_pizza_bnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/modifypizza"
        android:layout_alignBottom="@+id/largeTrad"
        android:layout_toEndOf="@id/largeTrad"
        android:layout_toRightOf="@id/largeTrad"
        android:layout_marginLeft="-9dp" />

</RelativeLayout>
