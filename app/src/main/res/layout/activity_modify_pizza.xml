<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="karikuncheva.dominosapp.ModifyPizzaActivity">

    <!--<include-->
        <!--layout="@layout/toolbar" ></include>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/pizza_name_mod"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textSize="15sp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/price_modif_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"/>

    </LinearLayout>
   <fragment
       android:id="@+id/modify_fragment"
       android:name="karikuncheva.dominosapp.ModifyPizzaFragment"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       tools:layout="@layout/fragment_modify"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorBackground">
    <!--<TextView-->
        <!--android:id="@+id/total_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Total: "-->
        <!--android:background="@color/colorBackground"/>-->

    <!--<TextView-->
        <!--android:id="@+id/price_modif_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/colorBackground"/>-->
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_to_cart_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Add to cart"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/cancel_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_login"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>
